<header>
    <h1>Beendete Abstimmungen</h1>
</header>

<section class="cliqr--archive-votings">
    <table class="default">
        <thead>
            <tr>
                <th> Titel der Frage </th>
                <th> Datum </th>
                <th> Anzahl Antworten </th>
                {{#user_role "lecturer"}}
                    <th> &nbsp; </th>
                {{/user_role}}
            </tr>
        </thead>
        <tbody>
            {{#each votings}}
                <tr data-votingid="{{id}}">
                    <td class="cliqr--archive-header">
                        <a href="#voting/{{id}}">
                            {{icon "test"}}
                            {{#if title}}{{task.title}}{{else}}{{strip_tags task.description_html}}{{/if}}
                        </a>
                    </td>

                    <td class="cliqr--archive-date">
                        <div> {{moment start}} </div>
                    </td>

                    <td class="cliqr--archive-bubble">
                        <span class="bubble" data-tooltip="Frage mit {{responses_count}} abgegebenen Antworten">{{responses_count}}</span>
                    </td>

                    {{#user_role "lecturer"}}
                        <td class="actions">
                            {{fab "remove" "Abstimmung l√∂schen" "trash" flat=true}}
                        </td>
                    {{/user_role}}
                </tr>
            {{/each}}
        </tbody>
    </table>
</section>
