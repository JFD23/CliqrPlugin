<header>
    <h1>Voting Nr.{{id}} ({{#if isRunning}}läuft gerade{{^}}abgelaufen{{/if}})</h1>
    <p>
        <a href="#task-{{task.id}}">
            zurück zur Frage
        </a>
    </p>
</header>

<main></main>

<nav>
    {{#if isRunning}}
        {{button "stop" "Beenden"}}

        <div class="appeal vote">
            <div class="url">
                Abstimmen unter
                <a class="short" href="{{cliqr_short_url}}">{{cliqr_short_url}}</a>
            </div>

            {{button "show-qr-code" "QR-Code zeigen" icon="code-qr"}}

            <div class="dialog" title="Abstimmen unter" style=display:none>
                <a class="short" href="{{cliqr_short_url}}">{{cliqr_short_url}}</a>
                <img class="qr" src="{{qr_code}}">
            </div>
        </div>

    {{else}}
        {{button "restart" "Noch einmal starten"}}

        {{#if otherAssignments}}
            <form class="default">
                <fieldset>
                    <legend>
                        Vergleichen mit:
                    </legend>
                    <select>
                        {{#each otherAssignments}}
                            <option value="{{id}}" {{#if isRunning}}disabled{{/if}}>
                                {{moment start}}
                                {{#unless isRunning}}
                                    ({{responses_count}} Stimmen)
                                    {{^}}
                                    (läuft gerade)
                                {{/unless}}
                            </option>
                        {{/each}}
                    </select>
                {{fab "compare" "Vergleichen" "test"}}
                </fieldset>
            </form>
        {{/if}}
    {{/if}}
</nav>
