    <fieldset>
        <label class="cliqr--upload-box">
            <input type="file" name="task-group-import-file" required accept="application/json">
            {{icon "upload2"}}
            <strong>Datei ausw√§hlen</strong>
            <!-- <span class="box__dragndrop"> oder Drag and Drop</span>. -->
        </label>
    </fieldset>

    <fieldset>
