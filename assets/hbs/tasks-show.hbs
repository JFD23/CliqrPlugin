<header class="cliqr--page-header">
    <nav class="cliqr--breadcrumb">
        <ol>
            <li>
                <a href="#task-groups">
                    Cliqr
                </a>
            </li>
            <li>
                <a href="#task-groups-{{task_group_id}}">
                    Fragensammlung &laquo;{{task_group_title}}&raquo;
                </a>
            </li>
        </ol>
    </nav>
</header>

<main></main>

<aside class="votings">
  {{#if editable}}
      {{linkbutton (concat "#task/edit/" id) "Frage bearbeiten" icon="edit"}}
  {{else}}
      {{button "copy-edit" "Frage bearbeiten" icon="exclaim-circle" color="red"}}
  {{/if}}

    {{#unless votings}}
        {{button "start" "Frage starten" icon="play" once=true}}
    {{/unless}}

    {{#if votings}}
        <h2>
            Abstimmungen:
        </h2>

        <ol class="cliqr--votings-list">
            {{#each votings}}
                <li>
                    <a href="#voting/{{id}}">
                        <span>
                            {{#if running}} {{icon 'play'}} {{else}} {{icon 'new/vote'}} {{/if}}
                        </span>
                        {{moment start}}
                        <span class="bubble" data-tooltip="{{responses_count}} Stimmen">{{responses_count}}</span>
                    </a>
                </li>
            {{/each}}
        </ol>

        <nav>
            {{#unless_state 'is_active'}}
                {{button "start" "Frage starten" icon="play" once=true}}
            {{else}}
                {{button "stop" "Frage beenden" icon="pause" once=true}}
            {{/unless_state}}
        </nav>
    {{/if}}
</aside>
