<td class="cliqr--task-checkbox">
    <!--
    <input type="checkbox" name="task[]" value="{{id}}">
    -->
</td>

<td class="cliqr--task-header">
    <a href="#task/show/{{id}}">
        {{icon "assessment"}}
        {{#if title}}{{title}}{{else}}{{strip_tags description_html}}{{/if}}
    </a>
    <div class="cliqr--task-last-assignment">
        {{#if last_voting}}
            zuletzt abgestimmt:
            {{#if_state 'is_active'}} {{icon 'play' color="black"}} {{/if_state}}
            <a href="#voting/{{last_voting.id}}">{{moment last_voting.start}}</a>
        {{else}}
            nie abgestimmt
        {{/if}}
    </div>
</td>

<td class="cliqr--task-changed">
    <a href="#task/show/{{id}}">
        {{moment changed}}
    </a>
</td>

<td class="cliqr--task-actions">
    {{#if_state 'is_active'}}
        {{fab "stop" "Stoppen" "pause" once=true flat=true}}
        {{^}}
        {{fab "start" "Starten" "play" once=true flat=true}}
    {{/if_state}}
    {{fab "duplicate" "Duplizieren" "add/files" once=true flat=true}}
    {{fab "remove" "LÃ¶schen" "trash" flat=true}}
</td>
