<section class="cliqr--multiple-choice-poll">
    <div class="jumbotron">
        <div class="container">
            {{#if task.title}}
                <p class="lead"> {{task.title}} </p>
            {{/if}}

            <p>{{task.description}}</p>
        </div>
    </div>

    <div class="container">
        <form action="" method="post">

            <div class="form-group">
                <ul class="list-group">
                    {{#each answers}}
                        <li class="list-group-item">
                            <label>
                                {{#if ../isSingleSelect}}
                                    <input type="radio" name="choice" value="{{@index}}" required>
                                {{else}}
                                    <input type="checkbox" name="choice[{{@index}}]" value="{{@index}}">
                                {{/if}}
                                <span class="nominal">{{nominal @index}}:</span>
                                {{text}}
                            </label>
                        </li>
                    {{/each}}
                </ul>
            </div>


            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Antwort abschicken</button>
            </div>
        </form>

    </div>
</section>
