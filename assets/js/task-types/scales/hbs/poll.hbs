<section class="cliqr--scales-poll">
    <div class="jumbotron">
        <div class="container">
            {{#if task.title}}
                <p class="lead"> {{task.title}} </p>
            {{/if}}

            <div class="description">{{{task.description_html}}}</div>
        </div>
    </div>

    <div class="container">
        <form action="" method="post">

            <div class="form-group">
                <ul class="list-group">
                    {{#each statements}}
                        <li class="list-group-item">
                            <label>
                                <input type="range"
                                       min="{{../task.task.lrange_value}}"
                                       max="{{../task.task.hrange_value}}"
                                       value="{{../task.initialValue}}">

                                {{#with ../task.task}}
                                    <div class="rangeslider__ruler">
                                        <span>
                                            {{#if lrange_label}}
                                                ({{lrange_value}}) {{lrange_label}}
                                            {{else}}
                                                {{lrange_value}}
                                            {{/if}}
                                        </span>

                                        <span>
                                            {{#if hrange_label}}
                                                {{hrange_label}} ({{hrange_value}})
                                            {{else}}
                                                {{hrange_value}}
                                            {{/if}}
                                        </span>
                                    </div>
                                {{/with}}

                                <output></output>
                                <div class="text">{{text}}</div>
                            </label>
                        </li>
                    {{/each}}
                </ul>
            </div>


            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Antwort abschicken</button>
            </div>
        </form>

    </div>
</section>
